{
  "name": "wdfn-viz",
  "version": "0.1.0dev",
  "description": "Provides templates and style sheets which implement the USGS visual standards for headers and footers",
  "scripts": {
    "build": "mkdir -p dist && run-p build:*",
    "build:js": "rollup -c --environment NODE_ENV:production",
    "build:css": "node-sass src/stylesheets/wdfnviz.scss dist/wdfnviz.css && postcss dist/wdfnviz.css --no-map --use autoprefixer postcss-flexbugs-fixes -o dist/wdfnviz.css && uglifycss --output dist/wdfnviz.min.css dist/wdfnviz.css",
    "test": "karma start",
    "test:watch": "karma start --debug --no-single-run --browsers Chrome"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usgs/wdfn-viz.git"
  },
  "keywords": [
    "USGS",
    "header",
    "footer"
  ],
  "author": "WMA Integrated Information Dissemination Division",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/usgs/wdfn-viz/issues"
  },
  "homepage": "https://github.com/usgs/wdfn-viz",
  "engines": {
    "node": ">= 8"
  },
  "sass": "src/wdfnviz.scss",
  "style": "dist/wdfnviz.css",
  "main": "dist/wdfnviz.js",
  "module": "dist/wdfnviz.es6.js",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "uswds": "^1.6.6"
  },
  "devDependencies": {
    "ajv": "^6.5.1",
    "codacy-coverage": "^3.0.0",
    "eslint": "^5.0.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "jasmine-core": "^2.99.1",
    "karma": "^2.0.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.2",
    "karma-js-coverage": "^0.4.0",
    "karma-rollup-preprocessor": "^6.0.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "rollup": "^0.61.1",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.1.3",
    "uglifycss": "0.0.29"
  }
}
